{
  "private": true,
  "name": "@leenders-coaching/root",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --parallel run dev",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "build": "pnpm --parallel run build",
    "build:frontend": "pnpm --filter leenders-coaching-nl build",
    "build:studio": "pnpm --filter studio-leenders-coaching-nl build",
    "lint": "pnpm --parallel run lint",
    "lint:format": "pnpm --filter leenders-coaching-nl run lint:format",
    "type-check": "pnpm --parallel run type-check",
    "test": "pnpm --filter leenders-coaching-nl test",
    "test:coverage": "pnpm --filter leenders-coaching-nl test:coverage",
    "test:coverage:ci": "pnpm --filter leenders-coaching-nl test:coverage:ci",
    "audit": "pnpm audit --audit-level moderate",
    "audit:high": "pnpm audit --audit-level high",
    "outdated": "pnpm outdated",
    "dedupe:check": "pnpm dedupe --check",
    "analyze:bundle": "pnpm --filter leenders-coaching-nl run analyze",
    "perf:audit": "pnpm --filter leenders-coaching-nl run perf:audit",
    "analyze:all": "pnpm run analyze:bundle && pnpm run perf:audit",
    "update-types": "pnpm --filter studio-leenders-coaching-nl run update-types",
    "validate:schema": "pnpm --filter studio-leenders-coaching-nl run validate:schema",
    "generate:types": "pnpm --filter studio-leenders-coaching-nl generate-types",
    "storybook:build": "pnpm --filter leenders-coaching-nl build-storybook",
    "storybook:dev": "pnpm --filter leenders-coaching-nl storybook",
    "chromatic": "pnpm --filter leenders-coaching-nl chromatic",
    "ci:install": "pnpm install --frozen-lockfile --prefer-offline",
    "ci:install:frozen": "pnpm install --frozen-lockfile",
    "ci:quality": "pnpm run lint && pnpm run type-check",
    "ci:test": "pnpm run test:coverage:ci",
    "ci:security": "pnpm run audit:high",
    "ci:build": "pnpm run build",
    "ci:verify": "pnpm run validate:builds && pnpm run validate:types && echo 'âœ… All verifications passed'",
    "validate:builds": "test -d packages/leenders-coaching-nl/.next && test -d packages/studio-leenders-coaching-nl/dist && echo 'âœ… All builds verified'",
    "validate:types": "test -f packages/studio-leenders-coaching-nl/sanity-typegen.json && echo 'âœ… Types generated successfully'",
    "seed:home": "node --loader ts-node/esm scripts/content-seeding/archive/add-home-sections.ts",
    "seed:blog-post": "node --loader ts-node/esm scripts/content-seeding/create-blog-post.ts",
    "seed:create-home-page": "node --loader ts-node/esm scripts/content-seeding/create-home-page.ts",
    "seed:create-home-page:dry-run": "node --loader ts-node/esm scripts/content-seeding/create-home-page.ts --dry-run",
    "seed:create-about-page": "node --loader ts-node/esm scripts/content-seeding/create-about-page.ts",
    "seed:create-about-page:dry-run": "node --loader ts-node/esm scripts/content-seeding/create-about-page.ts --dry-run",
    "seed:create-coaching-page": "node --loader ts-node/esm scripts/content-seeding/create-coaching-page.ts",
    "seed:create-coaching-page:dry-run": "node --loader ts-node/esm scripts/content-seeding/create-coaching-page.ts --dry-run",
    "seed:create-approach-page": "node --loader ts-node/esm scripts/content-seeding/create-approach-page.ts",
    "seed:create-approach-page:dry-run": "node --loader ts-node/esm scripts/content-seeding/create-approach-page.ts --dry-run",
    "seed:create-contact-page": "node --loader ts-node/esm scripts/content-seeding/create-contact-page.ts",
    "seed:create-contact-page:dry-run": "node --loader ts-node/esm scripts/content-seeding/create-contact-page.ts --dry-run",
    "seed:create-blog-page": "node --loader ts-node/esm scripts/content-seeding/create-blog-page.ts",
    "seed:create-blog-page:dry-run": "node --loader ts-node/esm scripts/content-seeding/create-blog-page.ts --dry-run",
    "seed:all": "node --loader ts-node/esm scripts/content-seeding/utils/seed-all-pages.ts",
    "seed:all:dry-run": "node --loader ts-node/esm scripts/content-seeding/utils/seed-all-pages.ts --dry-run"
  },
  "devDependencies": {
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/node": "24.3.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "babel-loader": "10.0.0",
    "eslint": "9.34.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "10.15.0"
  },
  "packageManager": "pnpm@10.15.0"
}
