{
  "private": true,
  "name": "@leenders-coaching/root",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --parallel run build",
    "lint": "pnpm --parallel run lint",
    "type-check": "pnpm --parallel run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "update-deps": "pnpm up -r --latest",
    "check-updates": "pnpm dlx npm-check-updates"
  },
  "resolutions": {
    "graphql": "16.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/node": "20.11.30",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "eslint": "8.57.0",
    "graphql": "16.10.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "typescript": "5.4.2"
  },
  "pnpm": {
    "overrides": {
      "graphql": "16.10.0"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
