{
  "private": true,
  "name": "@leenders-coaching/root",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --parallel run build",
    "lint": "pnpm --parallel run lint",
    "type-check": "pnpm --parallel run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "update-deps": "pnpm up -r --latest",
    "check-updates": "pnpm dlx npm-check-updates"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@types/node": "22.13.4",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@typescript-eslint/eslint-plugin": "8.24.0",
    "@typescript-eslint/parser": "8.24.0",
    "eslint": "9.20.1",
    "graphql": "16.10.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.1",
    "typescript": "5.7.3"
  },
  "pnpm": {
    "resolutions": {
      "graphql": "16.10.0"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "10.4.1"
  }
}
