{
  "name": "leenders-coaching-nl",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:format": "eslint . --format json",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "analyze:bundle": "npx @next/bundle-analyzer",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "build-storybook": "storybook build",
    "chromatic": "chromatic",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ci": "vitest run --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "update-types": "cd ../studio-leenders-coaching-nl && pnpm run update-types",
    "ci:install-playwright": "npx playwright install --with-deps chromium",
    "ci:test-a11y": "pnpm dlx start-server-and-test 'npx http-server storybook-static -p 6006' http://localhost:6006 'npx @storybook/test-runner --url http://localhost:6006'",
    "validate:tailwind": "npx tailwindcss build src/app/globals.css -o /tmp/test.css && echo 'âœ… Tailwind CSS configuration is valid' && rm -f /tmp/test.css",
    "validate:next": "npx next info",
    "analyze:storybook": "pnpm dlx bundlesize2 check storybook-static/**/*.js",
    "analyze:performance": "pnpm dlx webpack-bundle-analyzer .next/static/chunks/*.js --port 8888 --no-open",
    "analyze:lighthouse": "pnpm dlx lhci autorun",
    "verify:build": "test -d .next && test -f .next/BUILD_ID && echo 'âœ… Frontend build verified'",
    "verify:performance": "pnpm dlx bundlesize",
    "package:build": "tar -czf frontend-build.tar.gz -C . .next 2>/dev/null || echo 'No build artifacts to package'",
    "check:deps": "pnpm dlx depcheck",
    "check:security": "pnpm dlx audit-ci",
    "check:duplicates": "pnpm dlx jscpd src",
    "report:size": "size-limit",
    "report:size:ci": "size-limit --json",
    "analyze:bundle:detailed": "cross-env ANALYZE=true next build",
    "analyze:performance": "webpack-bundle-analyzer .next/static/chunks/*.js --port 8888 --no-open",
    "analyze:lighthouse": "lhci autorun",
    "analyze:lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "verify:size": "size-limit",
    "verify:size:ci": "size-limit --json",
    "perf:lighthouse": "lhci autorun",
    "perf:lighthouse:ci": "lhci autorun --collect.settings.preset=desktop",
    "perf:web-vitals": "pnpm dlx @vitejs/plugin-legacy",
    "perf:audit": "pnpm run perf:lighthouse && pnpm run verify:size",
    "perf:audit:ci": "pnpm run perf:lighthouse:ci && pnpm run verify:size:ci"
  },
  "size-limit": [
    {
      "name": "Main JS bundle",
      "path": ".next/static/chunks/*.js",
      "limit": "320 KB",
      "webpack": false
    },
    {
      "name": "CSS bundle",
      "path": ".next/static/css/*.css",
      "limit": "15 KB",
      "webpack": false
    },
    {
      "name": "App chunks",
      "path": ".next/static/chunks/app/**/*.js",
      "limit": "15 KB",
      "webpack": false
    }
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "pnpm type-check"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "tabWidth": 2
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.1",
    "@portabletext/react": "4.0.2",
    "@react-email/components": "0.5.1",
    "@react-email/render": "1.2.1",
    "@sanity/image-url": "1.2.0",
    "@vercel/analytics": "1.5.0",
    "motion": "12.23.12",
    "next": "15.5.2",
    "next-sanity": "10.0.15",
    "next-themes": "0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "7.62.0",
    "react-icons": "5.5.0",
    "resend": "6.0.1",
    "tailwind-merge": "3.3.1",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@next/bundle-analyzer": "15.5.2",
    "@next/env": "15.5.2",
    "@next/eslint-plugin-next": "15.5.2",
    "@portabletext/types": "2.0.15",
    "@storybook/addon-a11y": "9.1.3",
    "@storybook/addon-links": "9.1.3",
    "@storybook/addon-themes": "9.1.3",
    "@storybook/nextjs": "9.1.3",
    "@storybook/react": "9.1.3",
    "@tailwindcss/postcss": "4.1.12",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "chromatic": "13.1.3",
    "css-loader": "7.1.2",
    "dotenv": "17.2.1",
    "eslint-config-next": "15.5.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "9.1.3",
    "postcss": "8.5.6",
    "postcss-loader": "8.1.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "storybook": "9.1.3",
    "style-loader": "4.0.0",
    "tailwindcss": "4.1.12",
    "vitest": "3.2.4",
    "size-limit": "11.2.0",
    "@size-limit/preset-app": "11.2.0",
    "@size-limit/webpack": "11.2.0",
    "@size-limit/file": "11.2.0",
    "webpack-bundle-analyzer": "4.10.1",
    "@lhci/cli": "0.14.0",
    "cross-env": "7.0.3",
    "web-vitals": "5.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "10.15.0"
  },
  "packageManager": "pnpm@10.15.0"
}
