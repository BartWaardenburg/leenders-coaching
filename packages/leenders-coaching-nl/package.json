{
  "name": "leenders-coaching-nl",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "verify:build": "test -d .next && test -f .next/BUILD_ID && echo 'âœ… Frontend build verified'",
    "package:build": "tar -czf frontend-build.tar.gz -C . .next 2>/dev/null || echo 'No build artifacts to package'",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "lint": "eslint .",
    "lint:format": "eslint . --format json",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ci": "vitest run --config vitest.ci.config.ts --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic",
    "analyze:storybook": "pnpm dlx bundlesize2 check --config bundlesize.config.json",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:bundle": "pnpm dlx @next/bundle-analyzer",
    "verify:performance": "size-limit",
    "ci:install-playwright": "pnpm dlx playwright install --with-deps chromium",
    "ci:test-a11y": "pnpm dlx start-server-and-test 'pnpm dlx http-server storybook-static -p 6006' http://localhost:6006 'pnpm dlx @storybook/test-runner --url http://localhost:6006'",
    "validate:tailwind": "postcss src/app/globals.css -o /tmp/test.css --config postcss.config.mjs && echo 'âœ… Tailwind CSS configuration is valid' && rm -f /tmp/test.css",
    "perf:lighthouse": "lhci autorun",
    "perf:audit": "pnpm run perf:lighthouse",
    "update-types": "cd ../studio-leenders-coaching-nl && pnpm run update-types"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.1",
    "@portabletext/react": "4.0.2",
    "@react-email/components": "0.5.1",
    "@react-email/render": "1.2.1",
    "@sanity/image-url": "1.2.0",
    "@vercel/analytics": "1.5.0",
    "@vercel/related-projects": "1.0.0",
    "motion": "12.23.12",
    "next": "15.5.2",
    "next-sanity": "10.0.15",
    "next-themes": "0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "7.62.0",
    "react-icons": "5.5.0",
    "resend": "6.0.1",
    "tailwind-merge": "3.3.1",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@lhci/cli": "0.14.0",
    "@next/bundle-analyzer": "15.5.2",
    "@next/env": "15.5.2",
    "@next/eslint-plugin-next": "15.5.2",
    "@portabletext/types": "2.0.15",
    "@size-limit/preset-app": "11.2.0",
    "@storybook/addon-a11y": "9.1.3",
    "@storybook/addon-links": "9.1.3",
    "@storybook/addon-themes": "9.1.3",
    "@storybook/nextjs": "9.1.3",
    "@storybook/react": "9.1.3",
    "@tailwindcss/postcss": "4.1.12",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "chromatic": "13.1.3",
    "cross-env": "7.0.3",
    "css-loader": "7.1.2",
    "dotenv": "17.2.1",
    "eslint-config-next": "15.5.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "9.1.3",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "postcss-loader": "8.1.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "size-limit": "11.2.0",
    "storybook": "9.1.3",
    "style-loader": "4.0.0",
    "tailwindcss": "4.1.12",
    "vitest": "3.2.4",
    "web-vitals": "5.1.0",
    "webpack-bundle-analyzer": "4.10.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "10.15.0"
  },
  "packageManager": "pnpm@10.15.0"
}
